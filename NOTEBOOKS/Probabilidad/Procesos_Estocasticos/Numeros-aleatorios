using Random

# Establecer una semilla
  â• â•â•¡ =#

# â•”â•â•¡ a08a342a-8ee7-4867-ac22-328ad52b8542
Random.seed!(1234);

# Generar nÃºmeros aleatorios

# â•”â•â•¡ 7bf584eb-458a-44cc-8cc5-bfa2ce7938c7
num1 = rand(2)  

# â•”â•â•¡ f88c883a-0bef-49f3-9613-ebe8d8783f17
num2 = rand(2) 

# â•”â•â•¡ 4a9cc2f7-5000-46cd-a6d9-d5bc8b3ea8bf
println("Primer nÃºmero aleatorio: $num1")

# â•”â•â•¡ 53fbdc9b-4c9b-4042-baf1-8bc3a33eb3b8
println("Segundo nÃºmero aleatorio: $num2")

# Reiniciar la semilla para demostrar que la secuencia se repite

# â•”â•â•¡ b88989d2-699c-4063-84a0-57181d71a581
Random.seed!(1234);

# Generar los mismos nÃºmeros aleatorios nuevamente

# â•”â•â•¡ f6b625d9-a5f5-450c-bcf8-6cf41a6acfb9
num1_repeat = rand(2)

# â•”â•â•¡ 079fc173-9e91-426d-ae4f-df76c21e14eb
num2_repeat = rand(2)

# â•”â•â•¡ 111e3894-f6fa-43a0-ad50-989091c930f7
println("RepeticiÃ³n del primer nÃºmero aleatorio: $num1_repeat")

# â•”â•â•¡ 647015de-b0d2-41eb-80b4-d27aa5500238
println("RepeticiÃ³n del segundo nÃºmero aleatorio: $num2_repeat")

